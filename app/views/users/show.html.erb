<p id="notice"><%= notice %></p>

<h1>
  <strong>Name:</strong>
  <%= @user.name %>
</h1>

<% if @user.avatar.attached? %>
  <p> <%= image_tag @user.avatar.variant(resize: "500x500")%>
<% end %>

<% if @user.documents.attached? %>
  <h4> User Documents: </h4>

  <% @user.documents.each do |doc| %>
    <ul> 
    <li> <%= doc.filename %> <%= link_to 'View', url_for(doc) %> </ul>
    </ul>
  <% end %>
<% end %>

<br><br>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
